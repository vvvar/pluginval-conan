{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build",
        "command": "conan source . && conan install . && conan build .",
        "type": "shell",
        "problemMatcher": "$gcc"
      },
      {
        "label": "Export Package",
        "command": "conan export-pkg .",
        "type": "shell",
        "problemMatcher": "$gcc"
      },
      {
        "label": "Create Package",
        "command": "conan create .",
        "type": "shell",
        "problemMatcher": "$gcc"
      }
    ]
  }